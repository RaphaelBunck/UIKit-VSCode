	//Alignment
	"snippet-uk-align-default": {
	"prefix": "uk-align-default",
	"body": [" class=\"uk-align-${0:left}\" "],
	"description": "Floats the element to a selected position"
	},

	"snippet-uk-align-left": {
	"prefix": "uk-align-left",
	"body": [" class=\"uk-align-left\" "],
	"description": "Floats the element to the left"
	},

	"snippet-uk-align-center": {
	"prefix": "uk-align-center",
	"body": [" class=\"uk-align-center\" "],
	"description": "Floats the element to the center"
	},

	"snippet-uk-align-right": {
	"prefix": "uk-align-right",
	"body": [" class=\"uk-align-right\" "],
	"description": "Floats the element to the right"
	},

	"snippet-uk-align-responsive": {
	"prefix": "uk-align-responsive",
	"body": [" class=\"uk-align-${1:left}@${0:s}\" "],
	"description": "Floats the element on specific widths"
	},

	//Animations
	"snippet-uk-animation-fade": {
	"prefix": "uk-animation-fade",
	"body": [" class=\"uk-animation-fade\" "],
	"description": "The element fades in"
	},

