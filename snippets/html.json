	//Default Template
	"snippet-uk-$": {
  	"prefix": "uk-$",
  	"body": ["<!DOCTYPE html>",
  			"<html lang=\"${1:en}\">",
				"\t<head>",
						"\t\t<title>$2</title>",
						"\t\t<meta charset=\"UTF-8\">",
						"\t\t<meta name=\"viewport\" content=\"width=device-width, initial-scale=1\">",
						"\t\t<link rel=\"stylesheet\" href=\"https://cdnjs.cloudflare.com/ajax/libs/uikit/3.0.0-beta.11/css/uikit.min.css\" />",
						"\t\t<link href=\"${3:css/style.css}\" rel=\"stylesheet\">",
				"\t</head>",
				"\t<body>",
					"\t\t$0",

					"\t\t<script src=\"https://code.jquery.com/jquery-3.1.1.min.js\" \r\t\t\t\tintegrity=\"sha256-hVVnYaiADRTO2PzUGmuLJr8BLUSjGIZsDYGmIJLv2b8=\" crossorigin=\"anonymous\"></script>",
					"\t\t<script src=\"https://cdnjs.cloudflare.com/ajax/libs/uikit/3.0.0-beta.11/js/uikit.min.js\" \r\t\t\t\tintegrity=\"sha256-FGA+e7brIUjYaGdmcSBGfbrmGSkDoLEV52Ldaslq+p4=\" crossorigin=\"anonymous\"></script>",
						
				"\t</body>",
			"</html>"
			],
	"description": "Creates a basic UIKit template"
	},

