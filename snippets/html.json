	},

	"snippet-uk-animation-transform-origin": {
	"prefix": "uk-animation-transform-origin",
	"body": [" class=\"${1:uk-animation-scale-up} uk-animation-transform-origin-${2:[top|center|bottom]}-${3:[left|center|right]}\" "],
	"description": "The element scales in from a different direction"
	},

	//Articles
	"snippet-uk-article-basic": {
	"prefix": "uk-article-basic",
	"body": ["<article class=\"uk-article\">",
				"\t<h1 class=\"uk-article-title\">$1</h1>",
    			"\t<p class=\"uk-article-meta\">$0</p>",
			"</article>"
			],
	"description": "A basic article layout"
	},

	"snippet-uk-article-sample": {
	"prefix": "uk-article-sample",
	"body": ["<article class=\"uk-article\">",
				"\t<h1 class=\"uk-article-title\"><a class=\"uk-link-reset\" href=\"\">${1:Heading}</a></h1>",
				"\t<p class=\"uk-article-meta\">${2:Written by <a href=\"#\">Super User</a> on 12 April 2012. Posted in <a href=\"#\">Blog</a>}</p>",
				"\t<p class=\"uk-text-lead\">${3:Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. Ut enim ad minim veniam, quis nostrud exercitation ullamco laboris nisi ut aliquip.}</p>",
				"\t<p>${4:Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. Ut enim ad minim veniam, quis nostrud exercitation ullamco laboris nisi ut aliquip ex ea commodo consequat. Duis aute irure dolor in reprehenderit in voluptate velit esse cillum dolore eu fugiat nulla pariatur. Excepteur sint occaecat cupidatat non proident, sunt in culpa qui officia deserunt mollit anim id est laborum.}</p>",
				"\t<div class=\"uk-grid-small uk-child-width-auto\" uk-grid>",
					"\t\t<div>",
						"\t\t\t<a class=\"uk-button uk-button-text\" href=\"#\">${5:Read more}</a>",
					"\t\t</div>",
					"\t\t<div>",
						"\t\t\t<a class=\"uk-button uk-button-text\" href=\"#\">${6:5 Comments}</a>",
					"\t\t</div>",
				"\t</div>",
			"</article>"
			],
	"description": "A complete sample article with placeholders"
	}
